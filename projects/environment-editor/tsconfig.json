{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@libutil/*": ["../libutil/*"],
      "@libecs/*": ["../libecs/*"],
      "@libgamemodel/*": ["../libgamemodel/*"],
      "@testutils/*": ["../testutils/*"],
      "@io/*": ["../io/*"],
      "@librender/*": ["../librender/*"],
      "@libgamerender/*": ["../libgamerender/*"],
    },
    "lib": [
      "ES2018",
      "DOM"
    ]
  }
}
