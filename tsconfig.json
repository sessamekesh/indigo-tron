{
  "compileOnSave": false,
  "compilerOptions": {
    "strictNullChecks": true,
    "strictPropertyInitialization": true,

    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@librender/*": ["projects/librender/*"],
      "@libutil/*": ["projects/libutil/*"],
      "@libecs/*": ["projects/libecs/*"],
      "@libgamemodel/*": ["projects/libgamemodel/*"],
      "@libgamerender/*": ["projects/libgamerender/*"]
    }
  }
}
